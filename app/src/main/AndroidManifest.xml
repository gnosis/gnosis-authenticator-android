<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pm.gnosis.android.app.authenticator">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="pm.gnosis.android.app.authenticator.GnosisAuthenticatorApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="pm.gnosis.android.app.authenticator.ui.splash.SplashActivity"
            android:launchMode="singleTask"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.onboarding.GenerateMnemonicActivity"
            android:theme="@style/SplashTheme" />
        <activity
            android:name="pm.gnosis.android.app.authenticator.ui.MainActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="pm.gnosis.android.app.authenticator.ui.transactiondetails.TransactionDetailsActivity"
            android:parentActivityName="pm.gnosis.android.app.authenticator.ui.MainActivity" />
    </application>
</manifest>
