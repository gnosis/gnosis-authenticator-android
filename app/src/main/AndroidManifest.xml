<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pm.gnosis.heimdall">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="pm.gnosis.heimdall.HeimdallApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="pm.gnosis.heimdall.ui.splash.SplashActivity"
            android:launchMode="singleTask"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.onboarding.GenerateMnemonicActivity" />
        <activity android:name=".ui.onboarding.RestoreAccountActivity" />
        <activity
            android:name=".ui.main.MainActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.transactiondetails.TransactionDetailsActivity"
            android:parentActivityName=".ui.main.MainActivity"
            android:theme="@style/OldAppTheme" />
        <activity android:name=".ui.security.SecurityActivity" />
        <activity android:name=".ui.safe.details.SafeDetailsActivity" />
        <activity
            android:name=".ui.tokens.addtoken.AddTokenActivity"
            android:parentActivityName=".ui.main.MainActivity" />
        <activity android:name=".ui.settings.SettingsActivity" />
        <activity
            android:name=".ui.addressbook.list.AddressBookActivity"
            android:parentActivityName=".ui.main.MainActivity" />
        <activity
            android:name=".ui.addressbook.add.AddressBookAddEntryActivity"
            android:parentActivityName=".ui.addressbook.list.AddressBookActivity" />
        <activity
            android:name=".ui.addressbook.detail.AddressBookEntryDetailsActivity" />
    </application>
</manifest>
