            android:name=".ui.safe.create.CreateSafePaymentTokenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/GreyBackgroundTheme" />

        <activity
            android:name=".ui.safe.upgrade.UpgradeMasterCopyActivity"
            android:screenOrientation="portrait"
            android:theme="@style/WhiteTheme" />

        <activity
            android:name=".ui.safe.upgrade.UpgradeMasterCopyIntroActivity"
            android:screenOrientation="portrait"
            android:theme="@style/WhiteTheme" />

        <activity
            android:name=".ui.authenticator.SetupAuthenticatorActivity"
            android:screenOrientation="portrait"
            android:theme="@style/GreyBackgroundTheme" />

        <activity
            android:name=".ui.authenticator.SelectAuthenticatorActivity"
            android:screenOrientation="portrait"
            android:theme="@style/GreyBackgroundTheme" />

        <activity
            android:name=".ui.keycard.KeycardIntroActivity"
            android:screenOrientation="portrait"
            android:theme="@style/GreyBackgroundTheme" />

        <activity
            android:name=".ui.keycard.KeycardInitializeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/GreyBackgroundTheme" />

        <activity
            android:name=".ui.authenticator.ConnectAuthenticatorActivity"
            android:screenOrientation="portrait"
            android:theme="@style/GreyBackgroundTheme" />

        <activity
            android:name=".ui.safe.recover.extension.ReplaceAuthenticatorActivity"
            android:screenOrientation="portrait"
            android:theme="@style/GreyBackgroundTheme" />

        <activity
            android:name=".ui.safe.recover.safe.RecoverSafeAuthenticatorActivity"
            android:screenOrientation="portrait"
            android:theme="@style/GreyBackgroundTheme" />

        <service android:name=".services.HeimdallFirebaseService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service android:name=".services.BridgeService" />
    </application>
</manifest>
