<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="actionMenuTextColor">@color/toolbar_action</item>
        <item name="colorControlNormal">@color/toolbar_action</item>
    </style>

    <style name="MountainThemeBase" parent="AppTheme">
        <item name="android:windowBackground">@drawable/mountain_background</item>
    </style>

    <style name="MountainTheme" parent="MountainThemeBase" />

    <style name="WhiteThemeBase" parent="AppTheme">
        <item name="android:windowBackground">@color/white</item>
        <item name="colorAccent">@color/safe_green</item>
    </style>

    <style name="WhiteTheme" parent="WhiteThemeBase" />

</resources>
