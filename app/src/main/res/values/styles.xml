<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:editTextStyle">@style/Input</item>
        <item name="android:textViewStyle">@style/Text</item>
        <item name="editTextStyle">@style/Input</item>
        <item name="actionMenuTextColor">@color/toolbar_action</item>
        <item name="colorControlNormal">@color/toolbar_action</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="overlapAnchor">true</item>
    </style>

    <style name="CardTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/card_window_background</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="GreyBackgroundTheme" parent="WhiteTheme">
        <item name="android:windowBackground">@color/pale_grey_two</item>
    </style>

    <!-- Onboarding theme. -->

    <style name="OnBoardingThemeBase" parent="AppTheme">
        <item name="android:windowBackground">@color/gnosis_blue</item>
    </style>

    <style name="OnBoardingTheme" parent="OnBoardingThemeBase" />

    <style name="OnBoardingTheme.Text.Large" parent="android:TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="OnBoardingTheme.Text.Medium" parent="android:TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="OnBoardingTheme.FloatingLabel" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OnBoardingTheme.InputField" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white_alpha_70</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
    </style>

    <style name="OnBoardingTheme.TextButton" parent="android:TextAppearance">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/selectable_background</item>
    </style>

    <style name="OnBoardingTheme.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OnBoardingTheme.Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:tint">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/gnosis_blue</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Mountain theme. -->

    <style name="MountainThemeBase" parent="AppTheme">
        <item name="android:windowBackground">@drawable/mountain_background</item>
    </style>

    <style name="MountainTheme" parent="MountainThemeBase" />

    <style name="SmallButton" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/azure</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
    </style>

    <style name="SmallFlatButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/azure</item>
        <item name="android:textColor">@color/azure</item>
    </style>

    <!-- White theme (will be the main theme for the app) -->

    <style name="WhiteThemeBase" parent="AppTheme">
        <item name="android:windowBackground">@color/white</item>
        <item name="colorAccent">@color/azure</item>
        <item name="android:textColor">@color/text_grey_background</item>
    </style>

    <style name="WhiteTheme" parent="WhiteThemeBase" />

    <style name="WhiteTheme.FloatingLabel" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/azure</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:textSize">@dimen/primary_button_text_size</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PrimaryButton.Blue">
        <item name="android:background">@drawable/primary_button_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/primary_button_text_size</item>
    </style>

    <style name="WhiteTheme.RoundPrimaryButton">
        <item name="android:background">@drawable/round_button_fill</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/primary_button_text_size</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WhiteTheme.ToolbarTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">12sp</item>
        <item name="android:textColor">@color/dark_slate_blue</item>
    </style>

    <style name="WhiteTheme.SubtitleBold">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/dark_slate_blue</item>
    </style>

    <style name="WhiteTheme.FlatTextCenter">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:textColor">@color/battleship_grey</item>
    </style>

    <style name="WhiteTheme.RecoveryPhrasePick">
        <item name="android:background">@drawable/word_pick</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/dark_slate_blue</item>
    </style>

    <!-- Start: Toolbar styles -->

    <style name="AppBarLayout" parent="ThemeOverlay.AppCompat.Light">
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTitle</item>
        <item name="subtitleTextAppearance">@style/ToolbarSubtitle</item>
        <item name="android:background">@color/white</item>
        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/dark_slate_blue</item>
        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">@color/dark_slate_blue</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/dark_slate_blue</item>
    </style>

    <style name="ToolbarSubtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@color/battleship_grey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- End: Toolbar styles -->


    <!-- Start: Button styles -->

    <style name="PrimaryButton.White.Text" parent="Text">
        <item name="android:textColor">@color/azure</item>
        <item name="android:textSize">@dimen/primary_button_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PrimaryButton.White">
        <item name="android:background">@drawable/primary_button_white</item>
        <item name="android:textColor">@color/azure</item>
        <item name="android:textSize">@dimen/primary_button_text_size</item>
    </style>

    <style name="PrimaryButton.Blue.Wide">
        <item name="android:minHeight">@dimen/primary_button_height</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrimaryButton.Blue.FullWidth">
        <item name="android:background">@drawable/primary_button_full_width</item>
        <item name="android:minHeight">@dimen/primary_button_height</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:background">@drawable/secondary_button_inline</item>
        <item name="android:textColor">@color/secondary_button_text</item>
        <item name="android:textSize">@dimen/secondary_button_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/gnosis_blue</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/selectable_background</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="SecondaryTextButton" parent="TextButton">
        <item name="android:textColor">@color/secondary_button_text</item>
    </style>

    <!-- End: Button styles -->


    <!-- Start: Text styles -->

    <style name="Text" parent="TextAppearance.AppCompat">
        <!--
        Only use this to set font.
        All other attributes will overwrite default values for EVERY view
        -->
    </style>

    <style name="Content" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/light_text</item>
    </style>

    <style name="DarkContent" parent="Content">
        <item name="android:textColor">@color/default_text</item>
    </style>

    <style name="BoldContent" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/default_text</item>
    </style>

    <style name="Label" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/default_text</item>
    </style>

    <style name="TxLabel" parent="Content">
        <item name="android:textColor">@color/light_text</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="TxLabel.Review">
        <item name="android:textColor">@color/gnosis_dark_blue_alpha_50</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TxValue" parent="BoldContent">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="TxValueLight" parent="Content">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/default_text</item>
    </style>

    <style name="CapsText">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/bluey_grey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SpacedCapsText" parent="CapsText" />

    <style name="SpacedCapsTextSmall" parent="SpacedCapsText">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="Input" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/default_text</item>
        <item name="android:textColorHint">@color/light_text</item>
        <item name="android:background">@drawable/input_background</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="InlineInput" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/default_text</item>
        <item name="android:textColorHint">@color/light_text</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="CurrencyInput" parent="InlineInput">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="SafeSmallInfo">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/default_text</item>
    </style>

    <style name="LightText" parent="Text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/bluey_grey</item>
    </style>

    <style name="NormalText" parent="Text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/battleship_grey</item>
    </style>

    <style name="DarkText" parent="Text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark_slate_blue</item>
    </style>

    <!-- End: Text styles -->
</resources>
