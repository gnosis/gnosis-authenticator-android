<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="DisabledState">
        <attr name="state_disabled" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="TwoStepPanel">

        <attr name="disabled" format="boolean"/>

        <attr name="step" format="enum">
            <enum name="none" value="0" />
            <enum name="one" value="1" />
            <enum name="two" value="2" />
        </attr>

        <attr name="backVisible" format="boolean"/>
        <attr name="backEnabled" format="boolean"/>

        <attr name="forwardVisible" format="boolean"/>
        <attr name="forwardEnabled" format="boolean"/>
        <attr name="forwardLabel" format="string"/>

        <attr name="colorTextEnabled" format="color" />
        <attr name="colorTextDisabled" format="color" />

    </declare-styleable>
    
    <declare-styleable name="StepIndicator">

        <attr name="number" format="integer"/>
        <attr name="label" format="string"/>
        <attr name="stepState" format="enum">
            <enum name="uncompleted_inactive" value="0" />
            <enum name="uncompleted_active" value="1" />
            <enum name="skipped" value="2" />
            <enum name="completed" value="3" />
        </attr>

    </declare-styleable>

</resources>