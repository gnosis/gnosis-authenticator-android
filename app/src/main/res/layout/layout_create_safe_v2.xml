<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_create_safe_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                style="@style/OnBoardingTheme.Text.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Gnosis Safe" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/white_circle_border"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_smartphone_white" />

                <TextView
                    style="@style/OnBoardingTheme.Text.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="This phone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/white_circle_border"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_laptop" />

                <TextView
                    style="@style/OnBoardingTheme.Text.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Connected Chrome Extension" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/white_circle_border"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_recovery_key" />

                <TextView
                    style="@style/OnBoardingTheme.Text.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="The Safe Recovery Phrase" />

            </LinearLayout>


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/layout_create_safe_header_payment"
                    style="@style/Content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/payment"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="parent" />

                <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                    android:id="@+id/layout_create_safe_balance_progress"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_margin="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:mpb_indeterminateTint="@color/white" />

                <TextView
                    android:id="@+id/layout_create_safe_current_balance_label"
                    style="@style/Content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Current balance"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toStartOf="@+id/layout_create_safe_current_balance_value"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_create_safe_header_payment" />

                <TextView
                    android:id="@+id/layout_create_safe_current_balance_value"
                    style="@style/Content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="end"
                    android:text="-"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toEndOf="@+id/layout_create_safe_current_balance_label"
                    app:layout_constraintTop_toBottomOf="@+id/layout_create_safe_header_payment" />

                <android.support.constraint.Barrier
                    android:id="@+id/layout_create_safe_balance_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="layout_create_safe_current_balance_label,layout_create_safe_current_balance_value" />

                <TextView
                    android:id="@+id/layout_create_safe_costs_label"
                    style="@style/Content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Costs"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toStartOf="@+id/layout_create_safe_costs_value"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_create_safe_balance_info" />

                <TextView
                    android:id="@+id/layout_create_safe_costs_value"
                    style="@style/Content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="end"
                    android:text="-"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toEndOf="@+id/layout_create_safe_costs_label"
                    app:layout_constraintTop_toBottomOf="@+id/layout_create_safe_balance_info" />

                <android.support.constraint.Barrier
                    android:id="@+id/layout_create_safe_costs_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="layout_create_safe_costs_label,layout_create_safe_costs_value" />

                <View
                    android:id="@+id/layout_create_safe_costs_divider"
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_create_safe_costs_info" />

                <TextView
                    android:id="@+id/layout_create_safe_new_balance_label"
                    style="@style/Content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="New Balance"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toStartOf="@+id/layout_create_safe_new_balance_value"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_create_safe_costs_divider" />

                <TextView
                    android:id="@+id/layout_create_safe_new_balance_value"
                    style="@style/Content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:gravity="end"
                    android:text="-"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toEndOf="@+id/layout_create_safe_new_balance_label"
                    app:layout_constraintTop_toBottomOf="@+id/layout_create_safe_costs_divider" />

                <android.support.constraint.Barrier
                    android:id="@+id/layout_create_safe_new_balance_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="layout_create_safe_new_balance_label,layout_create_safe_new_balance_value" />

                <TextView
                    android:id="@+id/layout_create_safe_buy_credits"
                    style="@style/TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:text="@string/buy_credits"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_create_safe_new_balance_info" />
            </android.support.constraint.ConstraintLayout>


            <Button
                android:id="@+id/layout_create_safe_button"
                style="@style/OnBoardingTheme.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Create Gnosis Safe" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
