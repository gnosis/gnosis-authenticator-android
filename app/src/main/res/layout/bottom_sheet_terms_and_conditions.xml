<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="16dp"
    app:behavior_hideable="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <TextView
        android:id="@+id/bottom_sheet_terms_and_conditions_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Terms"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/bottom_sheet_terms_and_conditions_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="By continuing you accept and agree with the Terms of Use and Privacy Policy"
        app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_terms_and_conditions_title" />

    <TextView
        android:id="@+id/bottom_sheet_terms_and_conditions_reject"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:text="NO THANKS"
        android:theme="@style/SmallFlatButton"
        app:layout_constraintEnd_toStartOf="@+id/bottom_sheet_terms_and_conditions_agree"
        app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_terms_and_conditions_description" />

    <TextView
        android:id="@+id/bottom_sheet_terms_and_conditions_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="AGREE"
        style="@style/PrimaryButton"
        android:background="@drawable/primary_button_inline"
        app:layout_constraintBaseline_toBaselineOf="@+id/bottom_sheet_terms_and_conditions_reject"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>
