<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_account_coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/layout_account_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_account_toolbar">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        style="@style/Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/your_account_address" />

                    <TextView
                        android:id="@+id/layout_account_address"
                        style="@style/Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        tools:text="0x01ca023012ab3123" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/layout_account_clipboard"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/selectable_circle_background"
                            app:srcCompat="@drawable/ic_content_copy_24dp" />

                        <ImageView
                            android:id="@+id/layout_account_share"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="24dp"
                            android:layout_marginStart="24dp"
                            android:background="@drawable/selectable_circle_background"
                            app:srcCompat="@drawable/ic_share_24dp" />

                        <ImageView
                            android:id="@+id/layout_account_qrcode"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="24dp"
                            android:layout_marginStart="24dp"
                            android:background="@drawable/selectable_circle_background"
                            app:srcCompat="@drawable/ic_qr_24dp" />

                    </LinearLayout>

                    <TextView
                        style="@style/Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="@string/balance" />

                    <TextView
                        android:id="@+id/layout_account_balance"
                        style="@style/Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="42sp"
                        tools:text="42 Îž" />

                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </android.support.v4.widget.SwipeRefreshLayout>


        <android.support.v7.widget.Toolbar
            android:id="@+id/layout_account_toolbar"
            style="@style/Toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_shadow_size"
            android:layout_below="@+id/layout_account_toolbar"
            android:background="@drawable/toolbar_dropshadow" />

        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:id="@+id/layout_account_progress_bar"
            style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@+id/layout_account_toolbar"
            android:indeterminate="true"
            android:visibility="gone"
            app:mpb_progressStyle="horizontal"
            app:mpb_useIntrinsicPadding="false"
            tools:visibility="visible" />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
