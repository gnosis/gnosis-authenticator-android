<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/layout_multisig_item_share"
        android:layout_toStartOf="@+id/layout_multisig_item_share"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/layout_multisig_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            style="@style/Title"
            tools:text="My Multisig Wallet" />

        <TextView
            android:id="@+id/layout_multisig_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            style="@style/Label"
            tools:text="0x9bebe3b9e7a461e35775ec935336891edf856da2" />
    </LinearLayout>

    <ImageView
        android:id="@+id/layout_multisig_item_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="?selectableItemBackgroundBorderless"
        android:padding="8dp"
        app:srcCompat="@drawable/ic_share_24dp" />
</RelativeLayout>
