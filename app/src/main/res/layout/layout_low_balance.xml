<?xml version="1.0" encoding="utf-8"?>
<pm.gnosis.heimdall.views.ExpandableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_low_balance_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/onboarding_background"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/layout_low_balance_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/low_balance_warning" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/layout_low_balance_dismiss"
            style="@style/TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dismiss" />

        <TextView
            android:id="@+id/layout_low_balance_view_account"
            style="@style/TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_account" />

    </LinearLayout>
</pm.gnosis.heimdall.views.ExpandableLinearLayout>
