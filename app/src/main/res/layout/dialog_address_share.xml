<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_address_share_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_alpha_70"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/dialog_address_share_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="48dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/dialog_address_share_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:gravity="center"
            android:textColor="#21435a"
            android:textSize="18sp"
            tools:text="Gnosis Team Safe (BER)" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:letterSpacing="0.25"
            android:text="@string/scan_or_tap_to_copy"
            android:textAllCaps="true"
            android:textColor="#9921435a"
            android:textSize="12sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/dialog_share_qr_code"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:visibility="invisible" />

            <ProgressBar
                android:id="@+id/dialog_address_share_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="invisible"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/dialog_address_share_retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:letterSpacing="0.25"
                android:padding="8dp"
                android:text="@string/retry"
                android:textAllCaps="true"
                android:textColor="#9921435a"
                android:visibility="invisible"
                tools:visibility="visible" />
        </FrameLayout>

        <TextView
            android:id="@+id/dialog_address_share_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="#f4f4f9"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:padding="8dp"
            android:textColor="#21435a"
            android:textSize="12sp"
            tools:text="0xf1511FAB6b7347899f51f9db027A32b39caE3910" />

    </LinearLayout>

    <ImageView
        android:id="@+id/dialog_address_share_share"
        style="@style/PrimaryButton.FullWidth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp"
        android:tint="@color/white"
        app:srcCompat="@drawable/ic_share_24dp" />
</LinearLayout>
