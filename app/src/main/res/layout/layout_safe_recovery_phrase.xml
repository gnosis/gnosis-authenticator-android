<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_safe_recovery_phrase_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/OnBoardingTheme.Text.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Safe Recovery Phrase" />

                <TextView
                    style="@style/OnBoardingTheme.Text.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:gravity="center"
                    android:text="The Safe Recovery Phrase allows you to get access to your safe if you loose access to one of your devices. Please store the phrase in a secure place." />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/layout_safe_recovery_phrase_reveal"
                    style="@style/OnBoardingTheme.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:paddingEnd="50dp"
                    android:paddingStart="50dp"
                    android:text="@string/reveal" />

                <LinearLayout
                    android:id="@+id/layout_safe_recovery_phrase_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/layout_safe_recovery_phrase_mnemonic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/selectable_background"
                        android:gravity="center"
                        android:minLines="3"
                        android:padding="8dp"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:text="abstract inspire axis monster urban order rookie over volume poverty horse rack" />

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/layout_safe_recovery_phrase_save"
                        style="@style/OnBoardingTheme.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:paddingEnd="50dp"
                        android:paddingStart="50dp"
                        android:text="@string/i_have_saved_it" />

                    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                        android:id="@+id/layout_safe_recovery_phrase_progress_bar"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"
                        app:mpb_indeterminateTint="@color/white"
                        tools:visibility="visible" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
