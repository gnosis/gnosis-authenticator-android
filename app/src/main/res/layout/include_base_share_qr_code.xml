<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/include_base_share_qr_code_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="48dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/include_base_share_qr_code_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:textColor="@color/gnosis_dark_blue"
        android:textSize="18sp"
        tools:text="Gnosis Team Safe (BER)" />

    <TextView
        style="@style/SpacedCapsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/scan_or_tap_to_copy" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/include_base_share_qr_code_qr_code"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="invisible" />

        <ProgressBar
            android:id="@+id/include_base_share_qr_code_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/include_base_share_qr_code_retry"
            style="@style/SpacedCapsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:text="@string/retry"
            android:visibility="gone"
            tools:visibility="visible" />
    </FrameLayout>

    <TextView
        android:id="@+id/include_base_share_qr_code_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@color/text_grey_background"
        android:gravity="center"
        android:letterSpacing="0.03"
        android:padding="8dp"
        android:textColor="@color/gnosis_dark_blue"
        android:textSize="12sp"
        tools:text="0xf1511FAB6b7347899f51f9db027A32b39caE3910" />

</LinearLayout>
