<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_generate_mnemonic_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/OnBoardingTheme.Text.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Recovery Phrase" />

                <TextView
                    style="@style/OnBoardingTheme.Text.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:gravity="center"
                    android:text="The Recovery Phrase is a sensitive piece of information. You should only reveal it when you know that there are no other" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/layout_generate_mnemonic_reveal"
                    style="@style/OnBoardingTheme.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:paddingEnd="50dp"
                    android:paddingStart="50dp"
                    android:text="REVEAL" />

                <LinearLayout
                    android:id="@+id/layout_generate_mnemonic_reveal_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/layout_generate_mnemonic_mnemonic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/selectable_background"
                        android:gravity="center"
                        android:minLines="3"
                        android:padding="8dp"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:text="abstract inspire axis monster urban order rookie over volume poverty horse rack" />

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/layout_generate_mnemonic_save"
                        style="@style/OnBoardingTheme.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:paddingEnd="50dp"
                        android:paddingStart="50dp"
                        android:text="I HAVE SAVED IT" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/layout_generate_mnemonic_restore"
            style="@style/OnBoardingTheme.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:text="Restore" />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
