<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/azure"
    android:orientation="vertical">

    <View
        android:id="@+id/layout_unlock_dialog_alpha_background"
        android:layout_width="match_parent"
        android:background="@color/black_alpha_70"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_unlock_dialog_content_background"
        android:layout_height="0dp" />

    <View
        app:layout_constraintTop_toTopOf="@+id/layout_unlock_dialog_content_barrier"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/layout_unlock_dialog_content_background"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <android.support.constraint.Barrier
        android:id="@+id/layout_unlock_dialog_content_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="layout_unlock_dialog_password_input,layout_unlock_dialog_progress,layout_unlock_dialog_fingerprint_icon"/>

    <pm.gnosis.heimdall.views.ExtendedEditText
        android:id="@+id/layout_unlock_dialog_password_input"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@null"
        android:gravity="center"
        android:hint="@string/enter_master_password"
        android:inputType="textPassword"
        android:textColor="@color/dark_slate_blue"
        android:textColorHint="@color/bluey_grey"
        android:textSize="18sp"
        android:textStyle="normal"
        android:visibility="gone"
        tools:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.constraint.Group
        android:id="@+id/layout_unlock_dialog_fingerprint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        app:constraint_referenced_ids="layout_unlock_dialog_fingerprint_icon,layout_unlock_dialog_error,layout_unlock_dialog_switch_to_password" />

    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:id="@+id/layout_unlock_dialog_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible"/>

    <ImageView
        android:id="@+id/layout_unlock_dialog_fingerprint_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:src="@drawable/ic_fingerprint_pending"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/layout_unlock_dialog_error"/>

    <TextView
        android:id="@+id/layout_unlock_dialog_error"
        style="@style/DarkText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/layout_unlock_dialog_switch_to_password"
        tools:text="Place your finger on the sensor â€¨to submit transaction"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/layout_unlock_dialog_switch_to_password"
        style="@style/TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:text="@string/switch_to_password"
        android:textColor="@color/azure"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>
