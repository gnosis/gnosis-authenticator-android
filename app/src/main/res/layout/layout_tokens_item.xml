<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/layout_tokens_item_delete"
        android:layout_toStartOf="@+id/layout_tokens_item_delete"
        android:orientation="vertical">

        <TextView
            android:id="@+id/layout_tokens_item_name"
            style="@style/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="Gnosis" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/Content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/token_balance" />

            <TextView
                android:id="@+id/layout_tokens_item_balance"
                style="@style/Content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:textColor="@color/gnosis_blue"
                tools:text="15" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/layout_tokens_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:background="?selectableItemBackgroundBorderless"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_delete_24dp"
        tools:visibility="visible" />
</RelativeLayout>
