<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_password_setup_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mountain_background">

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_password_setup_content_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_password_setup_bottom_container"
        android:layout_margin="16dp"
        app:cardCornerRadius="@dimen/primary_button_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.core.widget.NestedScrollView
            android:id="@+id/layout_password_setup_content_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/layout_password_setup_title"
                    style="@style/WhiteTheme.SubtitleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/create_password"
                    android:textColor="@color/blue"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/setup_password_info"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    tools:text="secret">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/layout_password_setup_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:hint="@string/choose_password_hint"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textColor="@color/blue"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        tools:text="Test Password" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/layout_password_setup_validation_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="7sp"

                    android:textColor="@color/battleship_grey"
                    android:textSize="13sp"
                    android:textStyle="normal"
                    tools:text="No more than 2 identical characters in a row\nPassword with at least 1 number and 1 letter\nUse a minimum of 8 characters" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_password_setup_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:background="@color/dark_slate_blue_15"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/layout_password_setup_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="@drawable/selectable_background"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:tint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_arrow_back_24dp" />


        <View
            android:id="@+id/layout_password_setup_circle_1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/space"
            app:layout_constraintTop_toTopOf="parent">

            <aapt:attr name="android:background">

                <shape android:shape="oval">

                    <solid android:color="@color/white" />

                </shape>

            </aapt:attr>

        </View>

        <View
            android:id="@+id/layout_password_setup_circle_2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/space"
            app:layout_constraintTop_toTopOf="parent">

            <aapt:attr name="android:background">

                <shape android:shape="oval">

                    <solid android:color="@color/blue_grey" />

                </shape>

            </aapt:attr>

        </View>

        <LinearLayout
            android:id="@+id/layout_password_setup_next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@drawable/selectable_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/layout_password_setup_next_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="@string/next"
                android:textColor="@color/blue_grey" />

            <ImageView
                android:id="@+id/layout_password_setup_next_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:background="@drawable/selectable_background"
                android:rotation="180"
                android:tint="@color/blue_grey"
                app:srcCompat="@drawable/ic_arrow_back_24dp" />
        </LinearLayout>

        <Space
            android:id="@+id/space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/layout_password_setup_next"
            app:layout_constraintStart_toStartOf="@+id/layout_password_setup_back"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
