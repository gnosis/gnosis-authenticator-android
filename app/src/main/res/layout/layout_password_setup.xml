<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_password_setup_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/layout_password_setup_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_height"
                    android:gravity="center"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:text="@string/choose_password"
                    android:textColor="@color/text_dark_new"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_new"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="@string/setup_password_info"
                    android:textColor="@color/text_light_new" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layout_password_setup_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/choose_password"
                    android:padding="16dp"
                    app:errorEnabled="false"
                    app:hintTextAppearance="@style/WhiteTheme.FloatingLabel">

                    <EditText
                        android:id="@+id/layout_password_setup_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        tools:text="secret" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/layout_password_setup_validation_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:textColor="@color/text_light_2_new"
                    tools:text="No more than 2 identical characters in a row\nPassword with at least 1 number and 1 letter\nUse a minimum of 8 characters" />

            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:id="@+id/layout_password_setup_bottom_container"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_bottom_bar">

            <LinearLayout
                android:id="@+id/layout_password_setup_next"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@drawable/selectable_background"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingEnd="16dp"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/layout_password_setup_next_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/next"
                    android:textColor="@color/disabled" />

                <ImageView
                    android:id="@+id/layout_password_confirm_next_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rotation="180"
                    app:srcCompat="@drawable/ic_arrow_back_24dp" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
